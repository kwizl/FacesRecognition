@model Faces.WebMvc.ViewModels.OrderViewModel

@{ 
    ViewData["Title"] = "Register order page";
}

<div>
    <img src="/images/faceslogo.png" />
    <h2>Order Registration</h2>
</div>
<form asp-controller="Home" asp-action="RegisterOrder" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <h3>Enter your email address and upload your faces picture</h3>
            <div>
                <label asp-for="UserEmail"></label>
                <input asp-for="UserEmail" class="form-control" />
            </div>

            <div>
                <p>Upload your image file using the button below</p>
                <input type="file" name="file" />
            </div>
        </div>
        <input type="submit" class="btn btn-info" value="Submit" />
    </div>
</form>